{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "src/",
        "typeRoots": ["node_modules/@types"],
        "outDir": "lib/",

        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017"],

        "jsx": "React",
        "jsxFactory": "JSX.tag",

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "listEmittedFiles": true,
        "listFiles": true,
        "diagnostics": true
    },

    "exclude": [
        "node_modules",
        "***/*.old",
        "***/*.pre"
    ]
}
